@font-face {
  font-family: 'Kalam';
  font-style: normal;
  font-weight: 700;
  src: local("Kalam Bold"), local("Kalam-Bold"), url(https://fonts.gstatic.com/s/kalam/v8/YA9Qr0Wd4kDdMtDqHTLMkiQqtbGs.woff2) format("woff2");
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD; }

html {
  font: normal 112.5%/1.65 Helvetica, Arial, sans-serif; }

body {
  color: #444;
  font-weight: 300;
  min-height: 100vh;
  background-color: #d4d2d6;
  background-image: url(/img/brushed-alum-dark.png); }

h1, h2, h3, h4, h5, h6 {
  color: #222;
  font-family: "Kalam", cursive;
  text-rendering: optimizeLegibility;
  line-height: 1;
  margin-top: 0; }

h1 {
  font-size: 32px;
  font-size: 1.77777778 rem;
  margin-bottom: 16.70625px;
  margin-bottom: 0.928125rem; }

h2 {
  font-size: 28px;
  font-size: 1.55555556 rem;
  margin-bottom: 19.09285714px;
  margin-bottom: 1.06071429rem; }

h3 {
  font-size: 22px;
  font-size: 1.22222222 rem;
  margin-bottom: 24.3px;
  margin-bottom: 1.35rem; }

h4 {
  font-size: 20px;
  font-size: 1.11111111 rem;
  margin-bottom: 26.73px;
  margin-bottom: 1.485rem; }

h5 {
  font-size: 16px;
  font-size: 0.88888889 rem;
  margin-bottom: 33.4125px;
  margin-bottom: 1.85625rem; }

h6 {
  font-size: 12px;
  font-size: 0.66666667 rem;
  margin-bottom: 44.55px;
  margin-bottom: 2.475rem; }

a {
  text-decoration: none; }
  a:hover, a:focus {
    text-decoration: underline; }

hr {
  margin: 20px 0; }

header {
  display: flex;
  justify-content: space-between;
  padding: 1.1em 0;
  width: 100%;
  z-index: 1000; }
  header h1 {
    display: inline;
    padding-left: 1.1em;
    text-transform: uppercase; }
  header .nav-logo {
    position: absolute;
    left: 10px;
    top: 10px; }
    @media (min-width: 480px) {
      header .nav-logo {
        position: static; } }

nav {
  z-index: 1100;
  background-color: #e7dfcc;
  overflow-y: scroll; }
  nav #toggle-menu {
    position: absolute;
    top: 10px;
    right: 10px; }
  nav #tm {
    display: none; }
    nav #tm:checked + ul {
      display: block;
      height: 100vh; }
  nav ul {
    padding: 0;
    top: 20px;
    z-index: 1100;
    background-color: #e7dfcc;
    overflow-y: scroll;
    position: fixed;
    list-style: none;
    height: 0;
    width: 100vw;
    transition: all 0.125s ease-in-out; }
    nav ul li {
      position: relative;
      display: block; }
    nav ul [id^=sm-] {
      display: none; }
      nav ul [id^=sm-]:checked + .sub-menu {
        display: block; }
  nav span.drop-icon {
    display: none; }
  nav .sub-menu {
    position: static;
    display: none;
    height: auto; }
  nav .drop-icon {
    position: absolute;
    right: 10px; }
  nav .nav-item {
    padding-left: 10px; }

@media (min-width: 480px) {
  nav {
    background-color: inherit;
    overflow-y: visible; }
    nav #toggle-menu {
      display: none; }
    nav #tm:checked + ul,
    nav [id^=sm-]:checked + .sub-menu {
      display: none; }
    nav ul {
      background-color: inherit;
      position: static;
      display: inline;
      margin: 0;
      height: auto; }
      nav ul li {
        list-style: none;
        position: relative;
        float: left;
        display: inline; }
        nav ul li a {
          color: inherit;
          cursor: inherit;
          text-decoration: inherit; }
          nav ul li a:active, nav ul li a:focus {
            outline: none; }
          nav ul li a:hover, nav ul li a:focus {
            text-decoration: none; }
        nav ul li:hover {
          background-color: #ddd; }
          nav ul li:hover ul {
            background-color: #ddd;
            display: inline-block; }
            nav ul li:hover ul li {
              float: none;
              display: block; }
      nav ul ul.sub-menu {
        display: none;
        left: 0;
        position: absolute;
        top: 100%;
        width: 100%; }
      nav ul .drop-icon {
        position: relative; }
      nav ul .nav-item {
        padding-right: 10px; } }

main img.full-image {
  object-fit: cover;
  width: 100vw; }

body {
  display: flex;
  flex-direction: column;
  justify-content: space-between; }

header {
  flex-basis: 20%; }
  header h1 {
    font-size: 1.2rem; }

main {
  padding-top: 1.1em;
  flex: 1;
  padding: 0; }
  main p {
    padding: 0 20px; }

footer {
  align-self: flex-end;
  flex-basis: 10%;
  width: 100vw; }

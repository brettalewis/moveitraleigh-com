@font-face {
  font-family: 'Kalam';
  font-style: normal;
  font-weight: 400;
  src: local("Kalam"), local("Kalam-Regular"), url(https://fonts.gstatic.com/s/kalam/v8/YA9dr0Wd4kDdMthROCfhsCkA.woff2) format("woff2");
